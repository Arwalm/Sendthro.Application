<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneVerification">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="373dp"
        android:layout_height="318dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="29dp"
        app:srcCompat="@drawable/iconcolore" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="345dp"
        android:layout_height="41dp"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Verify Your Phone Number"
        android:textAlignment="center"
        android:textColor="#B2021340"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="314dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="270dp"
        android:fontFamily="serif"
        android:text="Please enter the verification code that we've sent to your phone."
        android:textAlignment="center"
        android:textColor="#B2021340"
        android:textSize="14sp" />

    <com.alimuzaffar.lib.pin.PinEntryEditText
        android:id="@+id/txt_pin_entry"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="197dp"
        android:cursorVisible="false"
        android:digits="1234567890"
        android:inputType="number"
        android:maxLength="8"
        android:textIsSelectable="false"
        android:textSize="20sp"
        app:pinAnimationType="popIn" />

    <Button
        android:id="@+id/verifybtn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="374dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="119dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="sans-serif-condensed"
        android:text="VERIFY"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#B2FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.568" />


    <TextView
        android:id="@+id/resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp"
        android:text="Didn't get a message? RESEND"
        android:textColor="#B2021340"
        android:textSize="16sp" />

</RelativeLayout>