<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/white"/>

    <RelativeLayout
        android:id="@+id/relativeLayoutSelectContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/btnContact"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginStart="50dp"
                android:background="@drawable/ic_user"
                android:paddingStart="20dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editTextToRecipient"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btnContact"
                android:layout_weight="7"
                android:gravity="start"
                android:inputType="phone"
                android:maxLength="50"
                android:paddingStart="20dp"
                android:paddingEnd="5dp"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"/>

        <Button
            android:id="@+id/addto"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="2dp"
            android:layout_toRightOf="@+id/editTextToRecipient"
            android:background="@drawable/add"/>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relativeLayoutSelectContact"
        android:background="#F6F4F5" />

    <LinearLayout
        android:id="@+id/relativeLayoutMessage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/view3"
        android:background="#f3f1f2"
        android:orientation="vertical">

    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@android:color/white"
        android:gravity="top"
        android:hint="Message..."
        android:lines="4"
        android:maxLength="170"
        android:paddingLeft="20dp"
        android:paddingTop="1dp"
        android:text="" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relativeLayoutMessage"
        android:background="#F6F4F5" />

    <RelativeLayout
        android:id="@+id/relativeLayoutSelectDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:weightSum="10">

            <TextView
                android:id="@+id/btnsetDate"
                android:textStyle="bold"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_time"
                android:gravity="center_vertical"
                android:layout_marginStart="50dp"
                android:paddingStart="20dp"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:layout_marginStart="20dp"
                android:gravity="center|left"
                android:text="dd/mm/yyy "
                android:textColor="@color/colorPrimary"
                android:textSize="15dp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relativeLayoutSelectDate"
        android:background="#F6F4F5" />

    <RelativeLayout
        android:id="@+id/relativeLayoutSelectTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:weightSum="10">

            <TextView
                android:id="@+id/btnsetTime"
                android:textStyle="bold"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:background="@drawable/ic_date"
                android:layout_marginStart="50dp"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center|left"
                android:text="hh:mm"
                android:layout_marginStart="20dp"
                android:textColor="#565656"
                android:textSize="15dp" />

        </LinearLayout>
    </RelativeLayout>

   <RelativeLayout
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:layout_below="@+id/relativeLayoutSelectTime">

        <Button
            android:id="@+id/btnUpdateSchedule"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_marginStart="95dp"
            android:text="Update Schedule"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white" />
   </RelativeLayout>

</RelativeLayout>